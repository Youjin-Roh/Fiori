<mvc:View controllerName="exercised0409.controller.View1"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:viz="sap.viz.ui5.controls"
    xmlns:viz.data="sap.viz.ui5.data"
    xmlns:viz.feeds="sap.viz.ui5.controls.common.feeds">
    <Page id="page" title="{i18n>title}">
    <!-- 1. Chart 정의 - VizFrame -->
            <viz:VizFrame id="barChart" width="100%" height="400px" vizType="column"
            vizProperties="{
                    'title' : { 'visible' : true, 'text' : '차트 타이틀' },
                    'legendGroup' : {
                        'layout' : { 'position' : 'bottom' }
                    },
                    'plotArea' : {
                        'drawingEffect' : 'glossy',
                        'dataLabel' : { 'visible' : true, 'type' : 'value' },
                        'colorPalette' : ['#6B66FF', '#F361DC']
                    }
                }">

                <!-- 2. dataset : FlattenedDataset - 데이터바인딩 (JSON 모델) -->
                <viz:dataset>
                    <viz.data:FlattenedDataset data="{Product>/data}">
                        <viz.data:dimensions>
                            <viz.data:DimensionDefinition name="Product" value="{Product>Product}" />
                        </viz.data:dimensions>

                        <viz.data:measures>
                            <viz.data:MeasureDefinition name="Stock" value="{Product>UnitsInStock}" />
                        </viz.data:measures>
                    </viz.data:FlattenedDataset>
                </viz:dataset>

                <!-- 3. feeds : FeedItem 정의 -->
                <viz:feeds>
                    <viz.feeds:FeedItem uid="categoryAxis" type="Dimension" values="Product" />
                    <viz.feeds:FeedItem uid="valueAxis" type="Measure" values="Stock" />
                </viz:feeds>


            </viz:VizFrame>
    </Page>
</mvc:View>