<core:FragmentDefinition
   xmlns="sap.m"
   xmlns:core="sap.ui.core"
   xmlns:viz="sap.viz.ui5.controls"
   xmlns:viz.data="sap.viz.ui5.data"
   xmlns:viz.feeds="sap.viz.ui5.controls.common.feeds">
   <Dialog title="성별 빈도 분석">
   <viz:VizFrame id="dChart" width="100%" height="400px" vizType="donut">

                <!-- 2. dataset : FlattenedDataset - 데이터바인딩 (JSON 모델) -->
                <viz:dataset>
                    <viz.data:FlattenedDataset data="{data>/data}">
                        <viz.data:dimensions>
                            <viz.data:DimensionDefinition name="Gender" value="{data>gender}" />
                        </viz.data:dimensions>

                        <viz.data:measures>
                            <viz.data:MeasureDefinition name="Count" 
                            value="{path: 'data>gender', formatter: '.calculateGenderCount'}" />
                        </viz.data:measures>
                    </viz.data:FlattenedDataset>
                </viz:dataset>

                <!-- 3. feeds : FeedItem 정의 -->
                <viz:feeds>
                    <viz.feeds:FeedItem uid="size" type="Measure" values="Count" />
                    <viz.feeds:FeedItem uid="color" type="Dimension" values="Gender" />
                </viz:feeds>


            </viz:VizFrame>
            <Button text="닫기" press=".onChartClose"/>
    </Dialog>
</core:FragmentDefinition>