<core:FragmentDefinition
   xmlns="sap.m"
   xmlns:core="sap.ui.core">
   <Dialog
      id="UpdateDialog">
      <content>
            <VBox>
                <Label text="항공사 코드" />
                <Input id="uCarrid" value="{data>Carrid}" />

                <Label text="항공사 이름" />
                <Input id="uCarrname" value="{data>Carrname}" />

                <Label text="통화 코드" />
                <Input id="uCurrcode" value="{data>Currcode}" />

                <Label text="URL" />
                <Input id="uUrl" value="{data>Url}" />
            </VBox>
        </content>

         <endButton>
         <Button
               text="Close"
               press=".onCloseDialog"/>
         </endButton>
            
         <beginButton>
         <Button
            text="Update"
            press=".onUpdateSaveDialog"/>
      </beginButton>
   </Dialog>
</core:FragmentDefinition>